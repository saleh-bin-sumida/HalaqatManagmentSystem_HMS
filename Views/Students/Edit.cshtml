@model Student

@{
    ViewData["Title"] = "Edit Student";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post" class="form-horizontal">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="FistName" class="control-label"></label>
        <input asp-for="FistName" class="form-control" />
        <span asp-validation-for="FistName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LastName" class="control-label"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber" class="control-label"></label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="HalaqaId" class="control-label">Halaqa</label>
        <select asp-for="HalaqaId" asp-items="ViewBag.Halaqat" class="form-control">
            <option value="">-- Select Halaqa --</option>
        </select>
        <span asp-validation-for="HalaqaId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
