@model Halaqa
@{
    ViewData["Title"] = "Halaqa Details";
}

<h2>Halaqa Details</h2>

<div>
    <h4>@Model.Name</h4>
    <dl class="row">
        <dt class="col-sm-2">Teacher</dt>
        <dd class="col-sm-10">@Model.Teacher?.FistName @Model.Teacher?.LastName</dd>

        <dt class="col-sm-2">Students</dt>
        <dd class="col-sm-10">
            @if (Model.Students != null && Model.Students.Any())
            {
                <ul>
                    @foreach (var student in Model.Students)
                    {
                        <li>@student.FistName @student.LastName</li>
                    }
                </ul>
            }
            else
            {
                <p>No students enrolled.</p>
            }
        </dd>
    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</p>
