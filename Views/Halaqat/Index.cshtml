@model IEnumerable<Halaqa>
@{
    ViewData["Title"] = "Halaqa List";
}

<h2>Halaqa List</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Halaqa</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Teacher Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Teacher.FistName @item.Teacher.LastName</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
